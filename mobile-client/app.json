{
  "expo": {
    "name": "BudgetIn Check",
    "slug": "budget-app",
    "version": "1.0.4",
    "runtimeVersion": "1.0.4",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "scheme": "budgetapp",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2a0a9e"
    },
    "ios": {
      "supportsTablet": true,
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "BudgetIn Check uses your camera to scan receipts and auto-fill expense details.",
        "NSPhotoLibraryUsageDescription": "BudgetIn Check accesses your photo library to import receipts.",
        "NSPhotoLibraryAddUsageDescription": "BudgetIn Check saves receipt images to your photo library when needed."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2a0a9e"
      },
      "package": "com.budgetincheck.mobile",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-notifications",
      [
        "expo-image-picker",
        {
          "photosPermission": "BudgetIn Check accesses your photo library to import receipts.",
          "cameraPermission": "BudgetIn Check uses your camera to scan receipts and auto-fill expense details."
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "eas": {
        "projectId": "031f0b35-bff9-490c-8b00-fb47b972fb44"
      }
    }
  }
}
